
<div class="panel panel-default text-center">
    <div class="panel-heading">
        <h2>@Model.Title</h2>
    </div>
    <div class="panel-body">
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Price:</strong> $ @Model.Price</p>
        
    </div>
    <div class="panel-footer">
        <a href="/Books/Show/@Model.BookId">
            <button type="button" class="btn btn-info">Details</button>
        </a>
        @if (Model.B_status == 0)
        {
            <form method="post" action="/Books/Accept/@Model.BookId" style="display:inline">
                @Html.HttpMethodOverride(HttpVerbs.Put)
                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Accept</button>
            </form>
            
            <form method="post" action="/Books/Delete/@Model.BookId" style="display:inline">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        }
    </div>
</div>      